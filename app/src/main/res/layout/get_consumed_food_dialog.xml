<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="قورمه سبزی"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:id="@+id/food_name"
        android:textColor="@color/bmi_30_to_40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/meal_text_view"
        android:text="وعده غذایی"
        android:textSize="16sp"
        android:layout_gravity="end"
        android:layout_marginEnd="30dp"
        android:textColor="@color/bmi_30_to_40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

<LinearLayout
    android:orientation="horizontal"
    android:id="@+id/meals"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:text="صبحانه"
        android:textAlignment="center"
        android:drawableTop="@drawable/ic_add_circle_outline_black_24dp"
        android:drawablePadding="5dp"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="صبحانه" android:textAlignment="center"
        android:layout_weight="1"  android:drawableTop="@drawable/ic_add_circle_outline_black_24dp"
        android:drawablePadding="5dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="صبحانه" android:textAlignment="center"
        android:layout_weight="1"  android:drawableTop="@drawable/ic_add_circle_outline_black_24dp"
        android:drawablePadding="5dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="صبحانه" android:textAlignment="center"
        android:layout_weight="1"  android:drawableTop="@drawable/ic_add_circle_outline_black_24dp"
        android:drawablePadding="5dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
</LinearLayout>
    <TextView
        android:id="@+id/consumed_amount_txt_view"
        android:text="میزان مصرف"
        android:textSize="16sp"
        android:layout_gravity="end"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/bmi_30_to_40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:textAlignment="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/bmi_30_to_40"
        android:textColorHint="@color/bmi_20_to_25"
        android:layout_gravity="end"
        android:layout_marginEnd="10dp"
        android:background="@drawable/amount_background"
        android:hint="میزان مصرف را وارد کنید"
        android:id="@+id/counsumed_amount_edit_text"
        android:inputType="number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>